<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9186C1"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="405dp"
        android:layout_height="723dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/Liniear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Text"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:gravity="center"
                android:text="Lista De Contacte"
                android:textColor="#FF0000"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/Contact1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Marian"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/Conctact2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Georgiana"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/Contact3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Loren"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/Contact4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Michael"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/Contact5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Daria"
                android:textSize="34sp" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/AdaugareBtn"
        android:layout_width="97dp"
        android:layout_height="77dp"
        android:background="#9085C0"
        android:onClick="AdaugareContact"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994"
        app:srcCompat="@drawable/baseline_add_24" />

</androidx.constraintlayout.widget.ConstraintLayout>